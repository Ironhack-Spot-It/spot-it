<main class="profile">
    <header class="profile__header">
        <figure>
            <img src="{{user.image}}" class="profile__image user-image img-big" alt="{{user.name}}">
        </figure>
        <h1>¡Hola {{user.name}}!</h1>
    </header>

    {{> user/matches }}

    <header class="container">
        <h2>¡Disfruta con tus favoritos!</h2>
        <span class="separator"></span>
    </header>
    
    <header class="container">
        <h4>Tus canciones más escuchadas</h4>
        {{!-- <span class="separator"></span> --}}
    </header>
    <section class="d-flex flex-wrap">
        {{#each user.topTracks as |track|}}
        <article class="item-card">
            <a href="{{track.url}}" target="_blank">
            <img class="item-card__img" src="{{track.imgUrl}}" alt="{{track.name}}">
            <div class="item-card__content">
                <h5 class="item-card__title">{{track.name}}</h5>
                <p class="item-card__text">{{track.artist}}</p>
            </div>
            </a>
        </article>
        {{/each}}
    </section>

    <header class="container">
        <h4>Tus playlists favoritas</h4>
        {{!-- <span class="separator"></span> --}}
    </header>
    <section class="d-flex flex-wrap">
        {{#each user.playlists as |play|}}
        <article class="item-card">
            <a href="{{play.url}}" target="_blank">
            <img class="item-card__img" src="{{play.imgUrl}}" alt="{{play.name}}">
            <div class="item-card__content">
                <h5 class="item-card__title">{{play.name}}</h5>
            </div>
            </a>
        </article>
        {{/each}}
    </section>

    <header class="container">
        <h4>Los artistas a los que sigues</h4>
        {{!-- <span class="separator"></span> --}}
    </header>
    <section class="d-flex flex-wrap">
        {{#each user.followingArtists as |artist|}}
        <article class="item-card">
            <a href="{{artist.url}}" target="_blank">
            <img class="item-card__img" src="{{artist.imgUrl}}" alt="{{artist.name}}">
            <div class="item-card__content">
                <h5 class="item-card__title">{{artist.name}}</h5>
            </div>
            </a>
        </article>
        {{/each}}
    </section>  

</main>
